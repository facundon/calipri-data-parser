{
  "name": "calipri-data-parser",
  "author": {
    "name": "Facundo Rodriguez",
    "email": "facundonrodriguez@gmail.com"
  },
  "homepage": "./",
  "description": "Parser for CSV files emited by Calipri",
  "version": "1.0.8",
  "private": true,
  "main": "public/electron.js",
  "repository": {
    "url": "https://github.com/facundon/calipri-data-parser"
  },
  "build": {
    "appId": "metrovias.electron.calipridataparser",
    "productName": "Calipri Data Parser",
    "copyright": "Copyright Â© 2021 ${author}",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/installerIcon.ico"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraFiles": [
      "config"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "facundon",
        "repo": "calipri-data-parser",
        "releaseType": "release" 
      }
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^12.8.3",
    "better-sqlite3": "^7.1.5",
    "electron-updater": "^4.3.8",
    "fs-extra": "^9.1.0",
    "lodash": "^4.17.21",
    "puppeteer": "^8.0.0",
    "react": "^17.0.2",
    "react-colorful": "^5.1.2",
    "react-dom": "^17.0.2",
    "react-papaparse": "^3.11.1",
    "react-scripts": "4.0.3",
    "rsuite": "^4.9.3",
    "web-vitals": "^1.1.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-start": "electron .",
    "electron-pack": "electron-builder -c.extraMetadata.main=build/electron.js",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "npm run build",
    "dist": "electron-builder",
    "rebuild": "node_modules/.bin/electron-rebuild -f -w better-sqlite3",
    "prerelease": "npm run build",
    "release": "electron-builder -c.extraMetadata.main=build/electron.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/better-sqlite3": "^5.4.1",
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.168",
    "@types/node": "^12.20.7",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "electron-rebuild": "^2.3.5",
    "eslint": "^7.23.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.23.1",
    "node-sass": "^5.0.0",
    "typescript": "^4.2.3"
  }
}
